  }

  if (!brands || !Array.isArray(brands) || brands.length === 0) {
    return null;
  }

  return (
    <section className="sidebar-single-area product-tags-area">
      <h3 className="sidebar-single-area__title">{t("shop.brands", "Brands")}</h3>
