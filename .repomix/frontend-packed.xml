          <Link
            key={brand.id}
            to="/shop"
            className={selectedTags.includes(brand.id) ? "active" : ""}
            onClick={(e) => {
              e.preventDefault();
              handleTagSelection(brand.id);
            }}
          >
            {brand.name}
          </Link>
        ))}
      </div>
    </section>
  );
};

